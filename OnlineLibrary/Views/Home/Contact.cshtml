@{
    ViewBag.Title = "Contact Us";
}

<h2>Contact Us</h2>
<p>If you have any questions or need further information, please leave us a message and we'll get back to you as soon as possible.</p>

@using (Html.BeginForm("SendMessage", "Home", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Name")
        @Html.TextBox("name", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Email")
        @Html.TextBox("email", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Message")
        @Html.TextArea("message", null, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Send Message</button>
}
